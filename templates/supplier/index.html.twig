{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-title fw-semibold mb-4">Liste des fournisseurs</h5>
                    <a class="btn btn-primary" href="{{ path('app_supplier_new') }}"><i class="ti ti-plus"></i> Créer un
                        fournisseur</a>
                </div>
                <div class="table-responsive" data-simplebar>
                    <table class="table text-nowrap align-middle table-custom mb-0">
                        <thead>
                        <tr>
                            <th scope="col" class="text-dark fw-semibold ">Nom du fournisseur
                            </th>
                            <th scope="col" class="text-dark fw-semibold">Email</th>
                            <th scope="col" class="text-dark fw-semibold">Adresse</th>
                            <th scope="col" class="text-dark fw-semibold">Télephone</th>
                            <th scope="col" class="text-dark fw-semibold">Création</th>
                            <th scope="col" class="text-dark fw-semibold">Actions</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for supplier in suppliers %}
                            <tr>
                                <td>
                                    <span class="text-dark  ">{{ supplier.fullname | capitalize }}</span>
                                </td>
                                <td>
                                    <span class="text-dark">{{ supplier.email }}</span>
                                </td>
                                <td>
                                    <span class="text-dark">{{ supplier.address }}</span>
                                </td>
                                <td>
                                    <span class="text-dark">{{ supplier.phone }}</span>
                                </td>
                                <td>
                                    <span class="text-dark">{{ supplier.createdAt | date('d/m/y') }}</span>
                                </td>
                                <td>
                                    <a href="{{ path('app_supplier_edit', {'id' : supplier.id}) }}"
                                       class="btn btn-light"><i class="ti ti-edit"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">Aucun founisseur</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="navigation mt-3 d-flex justify-content-end align-items-center">
                        {{ knp_pagination_render(suppliers) }}
                    </div>
                </div>
            </div>
        </div>
    </div>




{% endblock %}
