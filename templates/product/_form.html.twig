                            {{ form_errors(form.unitPrice) }}
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6 mb-3">
                        {{ form_label(form.category) }}
                        {{ form_widget(form.category) }}
                        <div class="text-danger">
                            {{ form_errors(form.category) }}
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6 mb-3">
                        {{ form_label(form.supplier) }}
                        {{ form_widget(form.supplier) }}
                        <div class="text-danger">
                            {{ form_errors(form.supplier) }}
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6 mb-3">
                        {{ form_label(form.quantityStock) }}
                        {{ form_widget(form.quantityStock) }}
                        <div class="text-danger">
                            {{ form_errors(form.quantityStock) }}
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6 mb-3">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description) }}
                        <div class="text-danger">
                            {{ form_errors(form.description) }}
                        </div>
                    </div>
                    <div class="col justify-content-start mb-2">
                        <button class="btn btn-primary">{{ button_label|default('Enr√©gistrer') }}</button>
                    </div>

                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
