
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title fw-semibold mb-4">GESTION PRODUIT</h5>
            <div class="card">
                {{ form_start(form, {'attr' : {'novalidate' : 'novalidate'}}) }}
